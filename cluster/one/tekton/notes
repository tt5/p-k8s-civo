tkn pipelinerun logs test
tkn pipeline start test --use-pipelinerun test
kubectl logs --selector=tekton.dev/taskRun=test-7ldtf-one
k delete pod -l tekton.dev/pipeline=test
k delete pipelinerun -l tekton.dev/pipeline=test

kubectl create clusterrolebinding cluster_role_binding_myadmin --clusterrole=cluster-admin --serviceaccount=default:myadmin
k delete pipelinerun -l tekton.dev/pipeline=kubectl

tkn pipeline start kubectl --showlog --serviceaccount myadmin
kubectl run wolfi --image=cgr.dev/chainguard/wolfi-base --restart=Never --command sleep -- 999d
tkn pipeline start --workspace name=workspace,claimName=workspace test --showlog --serviceaccount myadmin

tkn pipeline start wolfi --showlog --serviceaccount myadmin
